                    />
                    <FooterLink
                        icon=""
                        color="blue"
                        classname="font-awesome-brands"
                        link="https://www.linkedin.com/in/mae-kristine-vannirrie-sarmiento/"
                    />
                    <FooterLink
                        icon=""
                        color="green"
                        classname="font-awesome-brands"
                        link="https://wa.link/y4dtpr"
                    />
                    <FooterLink
                        icon=""
                        color="pink"
                        classname="font-awesome-brands"
